<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:padding="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/list_maker_title"
            android:gravity="center_horizontal"
            android:textSize="20sp"/>

    <EditText
            android:hint="@string/list_maker_et_hint"
            android:maxLines="1"
            android:maxLength="30"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_maker_item_et"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/list_maker_insert_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/list_maker_insert_btn_label"/>
        <Button
                android:visibility="gone"
                android:id="@+id/list_maker_delete_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/list_maker_delete_btn_label"/>

    </LinearLayout>


    <ListView
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/list_maker_lv"/>

</LinearLayout>


