<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:maxLines="1"
            android:orientation="vertical"
            android:padding="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastrar"
                android:textSize="30sp"
                android:gravity="center_horizontal"
                android:textColor="@android:color/black"
        />

        <EditText
                android:id="@+id/cadastro_et_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Nome"
                android:inputType="text"
        />

        <EditText
                android:id="@+id/cadastro_et_idade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Idade"
                android:inputType="number"
        />

        <EditText
                android:id="@+id/cadastro_et_telefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Telefone"
                android:inputType="number"
        />

        <EditText
                android:id="@+id/cadastro_et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="E-mail"
                android:inputType="text"
        />

        <EditText
                android:id="@+id/cadastro_et_senha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Senha"
                android:inputType="textPassword"
        />

        <Button
                android:id="@+id/cadastro_btn_cadastrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="cadastrar"
        />

        <Button
                android:id="@+id/cadastro_btn_lista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="ver lista"
        />

        <Button
                android:id="@+id/cadastro_btn_voltar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="voltar"
        />

    </LinearLayout>
</ScrollView>